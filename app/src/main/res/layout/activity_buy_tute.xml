<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivCornerImage"
        android:layout_width="@dimen/et_width_120"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_blue_top_background"
        app:tint="@color/red_a" />
    <ImageView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_buysell_icon_small_blue"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:adjustViewBounds="true"
        android:id="@+id/ivBackArrow"
        android:layout_width="wrap_content"
        android:padding="@dimen/et_height_20"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        android:src="@drawable/ic_red_back_arrow" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_red_bottom_background"
        app:tint="@color/red_a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_marginEnd="@dimen/et_height_20"
            android:layout_marginStart="20dp"
            android:layout_weight="2.6"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLoginCart"
                    android:layout_width="250dp"

                    android:layout_centerHorizontal="true"
                    android:layout_height="200dp"

                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_bule_main" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_horizontal"
                        android:text="@string/the_stron_old_branch"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_marginTop="@dimen/et_height_20"
                        android:src="@drawable/red_line_2"
                        android:layout_width="170dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/product_added_in_this_can_be_"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/red_line_1"
                        android:layout_width="170dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/read_through_descriptions_and_details_buy"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@drawable/red_line_2"
                        android:layout_width="170dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/make_an_or_negotiate_your_final_offer"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="361dp"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

        </LinearLayout>



    </LinearLayout>
    <ImageView
        android:padding="@dimen/et_height_50"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_right_arrow_part_one"
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginStart="@dimen/et_height_20"
        android:paddingBottom="@dimen/et_height_30"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="@string/skip"
        android:textColor="@color/red_a"
        android:textSize="20sp"
        android:id="@+id/tvSkip"

        />

</RelativeLayout>
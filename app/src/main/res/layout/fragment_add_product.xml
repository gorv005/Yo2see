<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">


                <TextView
                    android:id="@+id/tvProductPath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:text="Samsung galaxy s8"
                    android:textColor="@color/red_a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/select_an_posting_category"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbSell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rbRent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/rent"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rbBarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/barter"
                        android:textColor="@color/black" />

                </LinearLayout>



                <include layout="@layout/layout_set_rent_sell_info"/>
                <include layout="@layout/layout_set_barter_info"/>


                <include layout="@layout/layout_set_payment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/are_you_open_to_negotiation"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rbNO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/no"
                        android:textColor="@color/black"
                        tools:ignore="DuplicateIds" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/upload_images"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/for_the_best_viewing_please_upload"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_round_corner_bg" />
                    </LinearLayout>

                </LinearLayout>


                <include layout="@layout/layout_set_location_info"/>

            <include layout="@layout/layout_set_user_info"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveProductBtn"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/btn_app_selected"
                    android:clickable="false"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/add_listing"
                    android:textColor="@color/white" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_semibold"
                android:scaleType="fitXY"
                android:src="@drawable/ic_yo2see_logo"
                android:text="@string/mobile_and_accessories" />

            <ImageView
                android:id="@+id/ivCurveProductDetails"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:src="@drawable/curve_buysell" />

            <ImageView
                android:id="@+id/ivBackDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/ic_left_arrow_white" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
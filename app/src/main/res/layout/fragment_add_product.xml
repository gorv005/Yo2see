                        android:padding="@dimen/et_height_20">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_horizontal"
                                android:text="@string/category"
                                android:textColor="@color/red_a"
                                android:textSize="20sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_mobiles" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/red_a" />
                        <include
                            android:id="@+id/layout_location_info"
                            layout="@layout/layout_set_location_info" />
                    </LinearLayout>
   </RelativeLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveProductBtn"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/btn_app_selected"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/add_listing"
                    android:textColor="@color/white" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_semibold"
                android:scaleType="fitXY"
                android:src="@drawable/ic_yo2see_logo"
                android:text="@string/mobile_and_accessories" />

            <ImageView
                android:id="@+id/ivCurveAddProduct"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:src="@drawable/curve_buysell"
                app:tint="@color/red_a" />

            <ImageView
                android:id="@+id/ivBackDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/ic_left_arrow_white" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
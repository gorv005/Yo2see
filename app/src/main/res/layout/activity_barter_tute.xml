<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_barter_icon_small_purple"
       />

    <ImageView
        android:id="@+id/ivCornerImage"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/curve_buysell"
        app:tint="@color/yellow1" />
    <androidx.appcompat.widget.AppCompatImageView
        android:adjustViewBounds="true"
        android:id="@+id/ivBackArrow"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        android:src="@drawable/ic_red_back_arrow" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_red_bottom_background"
        app:tint="@color/yellow1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_marginEnd="@dimen/et_height_20"
            android:layout_marginStart="20dp"
            android:layout_weight="2.6"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_alignParentStart="true"
                    android:id="@+id/ivLoginCart"
                    app:srcCompat="@drawable/ic_barter_updated" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_horizontal"
                        android:text="@string/a_one_stop_trade_off_spot_for"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:background="@color/white"
                        android:tintMode="screen"
                        app:tint="@color/yellow1"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_blue_stick_right"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/choose_from_our_22_listing"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:tintMode="add"
                        app:tint="@color/yellow1"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_blue_stick_left"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/read_through_descriptions_and_details"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:tintMode="add"
                        app:tint="@color/yellow1"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_blue_stick_right"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/make_an_or_negotiate_your_final_offer"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>



    </LinearLayout>
    <ImageView
        android:padding="@dimen/et_height_50"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_yellow_nect_button"
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
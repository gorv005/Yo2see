<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/llBack"
                android:layout_height="wrap_content"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >


                    <RelativeLayout
                        android:layout_marginStart="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RelativeLayout
                            android:id="@+id/RLProfileChat"

                            android:layout_gravity="center_horizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/round_bg" >
                            <com.makeramen.roundedimageview.RoundedImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/ivProfileChat"
                                android:src="@drawable/ic_logo"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="30dip"
                                app:riv_border_width="2dip"
                                android:padding="5dp"
                                android:layout_centerInParent="true"
                                android:layout_width="68dp"
                                android:layout_height="68dp"
                                app:riv_border_color="#ffffff"
                                app:riv_mutate_background="true"
                                app:riv_tile_mode="repeat"
                                app:riv_oval="true" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_toRightOf="@id/RLProfileChat"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_gravity="start"
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/view_profile_"
                                android:lineSpacingExtra="1dp"
                                android:textColor="@color/black"
                                android:textSize="14sp" />


                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:background="@color/red_a"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChat"
                android:layout_below="@id/llBack"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="3"
                tools:listitem="@layout/item_chat" />



            <ImageView
                android:id="@+id/ivChatFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                app:tint="@color/red_a"
                android:src="@drawable/ic_left_arrow_white" />

        </RelativeLayout>
</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
        android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">


     <LinearLayout
         android:layout_weight="2.2"
         android:layout_marginTop="100dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
   >
         <ImageView
             android:adjustViewBounds="true"
             android:id="@+id/mainTree"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerInParent="true"
             android:src="@drawable/tree_main" />

     </LinearLayout>
    <RelativeLayout
        android:layout_weight="0.8"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="0dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_round_selected_red"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp">
        <ImageView
            android:id="@+id/ivTute1"
            android:layout_width="15dp"
            android:src="@drawable/round_circle_red"
            android:layout_height="15dp"/>
        <ImageView
            android:id="@+id/ivTute2"
            android:layout_marginStart="5dp"
            android:layout_width="15dp"
            android:src="@drawable/round_circle_grey"
            android:layout_height="15dp"/>
        <ImageView
            android:id="@+id/ivTute3"
            android:layout_marginStart="5dp"
            android:layout_width="15dp"
            android:src="@drawable/round_circle_grey"
            android:layout_height="15dp"/>
        <ImageView
            android:id="@+id/ivTute4"
            android:layout_marginStart="5dp"
            android:layout_width="15dp"
            android:src="@drawable/round_circle_grey"
            android:layout_height="15dp"/>
        <ImageView
            android:id="@+id/ivTute5"
            android:layout_marginStart="5dp"
            android:layout_width="15dp"
            android:src="@drawable/round_circle_grey"
            android:layout_height="15dp"/>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/gifImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_tree_without_circles1" />


        <ImageView
            android:id="@+id/ivsell"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="150dp"

            android:src="@drawable/sell"
            android:visibility="visible"></ImageView>

        <ImageView
            android:id="@+id/ivbarter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"

            android:layout_marginEnd="40dp"
            android:layout_toRightOf="@id/ivrent"
            android:src="@drawable/barter"
            android:visibility="visible"></ImageView>

        <ImageView
            android:id="@+id/ivbuy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/buy"
            android:visibility="visible"></ImageView>

        <ImageView
            android:id="@+id/ivrent"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/rent"
            android:visibility="visible"></ImageView>

        <ImageView
            android:id="@+id/ivpost"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_alignParentRight="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/post"
            android:visibility="visible"></ImageView>
    </RelativeLayout>


</LinearLayout>